<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ghibli!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% for d in data %}
                <div class="flip">
                    {% if d.image is defined %}
                        {% set imageUrl = d.image %}
                    {% else %}
                        {% set imageUrl = '' %}
                    {% endif %}
                    <div class="front" style="background-image: url({{ imageUrl }}?w=1260&h=750&dpr=2&auto=compress&cs=tinysrgb)">

                    </div>
                    <div class="back">
                        <h2>{{ d.title }}</h2>
                        <p>{{ d.description }}</p>
                    </div>
                </div>
            {% endfor %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
